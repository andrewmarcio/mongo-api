{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": [
            "es6",
            "esnext"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@environments/*": ["src/infra/environment/*"],
        }
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules"
    ]
}