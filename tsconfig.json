{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": [
            "es6",
            "esnext"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@infra": ["src/infra/index"],
            "@domain/*": ["src/domain/*"],
            "@services/*": ["src/application/services/*"],
        }
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules"
    ]
}